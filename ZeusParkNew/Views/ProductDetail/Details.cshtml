@model ZeusPark.Service.Model.ProductVM

@{
    ViewBag.Title = "产品信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section customstyles
{
    <link rel="stylesheet" href="http://zeusparkweb.oss-cn-shanghai.aliyuncs.com/css/jquery.bxslider.css" />
}

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="color-green pull-left">@Model.Name</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="#">主页</a> <span class="divider">/</span></li>
            <li class="active">@Model.Name</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
<!--=== Content Part ===-->
<div class="no-display">
    <input type="hidden" name="productid" value="@Model.ProductID">
</div>
<div class="container portfolio-item">
    <div class="row-fluid margin-bottom-20">
        <!-- Carousel -->
        <div class="span7">
            <div id="myCarousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Model.MainImageUrl" alt="" style="width:100%;height:500px;" />
                        <div class="carousel-caption">
                            <h4>主推产品</h4>
                            <p>Hot product</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="@Model.MainImageUrl" alt="" />
                        <div class="carousel-caption">
                            <h4>图片二</h4>
                            <p>Picture Two</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="@Model.MainImageUrl" alt="" />
                        <div class="carousel-caption">
                            <h4>图片三</h4>
                            <p>Picture Three</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-arrow">
                    <a data-slide="prev" href="#myCarousel" class="left carousel-control"><i class="icon-angle-left"></i></a>
                    <a data-slide="next" href="#myCarousel" class="right carousel-control"><i class="icon-angle-right"></i></a>
                </div>
            </div>
        </div><!--/span7-->
        <!-- //End Tabs and Carousel -->

        <div class="span5">
            <h3>@Model.Name</h3>
            <p></p>
            <ul class="unstyled">
                <li><i class="icon-user color-green"></i> 价格: ¥@{ var price = Model.SkuInfoList[0].Price / 100; @price} </li>
                <li><i class="icon-calendar color-green"></i> 14,2003 February</li>
                <li><i class="icon-tags color-green"></i> 库存： @Model.SkuInfoList[0].Quantity</li>
            </ul>
            <p><a class="btn-u btn-u-large" target="_blank" href="/ProductDetail/Buy?subject=@Model.Name&totalFee=@{ var priceBuy = Model.SkuInfoList[0].Price / 100; @priceBuy}">购买</a></p>
            <div class="pay-image">
                <br />
                <p>微信扫描支付</p>
                <img src="~/@Model.SaleInfo.PayImageUrl" alt="" title="">
                <!-- JiaThis Button BEGIN -->
                <div class="jiathis_style_32x32">
                    <a class="jiathis_button_weixin"></a>
                    <a class="jiathis_button_tsina"></a>
                    <a class="jiathis_button_t163"></a>
                    <a class="jiathis_counter_style"></a>
                </div>
                <!-- JiaThis Button END -->
            </div>
        </div>
    </div><!--/row-fluid-->

    <div>
        @Html.Raw(Model.DetailHtml)
    </div>

