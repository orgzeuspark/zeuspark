@model ZeusPark.Service.Model.UserAccount

@{
    ViewBag.Title = "会员注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--=== Content Part ===-->
<div class="body">
    <div class="breadcrumbs margin-bottom-50">
        <div class="container">
            <h1 class="color-green pull-left">注册</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="~/">主页</a> <span class="divider">/</span></li>
                <li class="active">注册</li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->
    <div class="container">
        <div class="row-fluid margin-bottom-10">
            <form class="reg-page" style="max-width:50%" action="/User/CreateAccount" method="post" id="userform" />
            <h3>注册新会员</h3>
            <div class="controls">
                <label>用户名<span class="color-red">*</span></label>
                @Html.TextBoxFor(model => model.AccountName, new { @class = "span12" })
                <label>姓名<span class="color-red">*</span></label>
                @Html.TextBoxFor(model => model.UserName, new { @class = "span12" })
                <label>手机<span class="color-red">*</span></label>
                @Html.TextBoxFor(model => model.Telephone, new { @class = "span12" })
                <label>邮箱<span class="color-red">*</span></label>
                @Html.TextBoxFor(model => model.Mail, new { @class = "span12" })
            </div>
            <div class="controls">
                <div class="span6">
                    <label>密码 <span class="color-red">*</span></label>
                    @Html.PasswordFor(model => model.Password, new { @class = "span12" })
                </div>
                <div class="span6">
                    <label>重复密码<span class="color-red">*</span></label>
                    <input type="password" name="confirm_password" id="password_c_reg" class="span12">
                </div>
            </div>
            <div class="controls form-inline">
                <label class="checkbox"><input type="checkbox" />&nbsp; 我同意 <a href="">ZuesPark用户条款与协议</a></label>
                <button class="btn-u pull-right" type="submit" id="save">注   册</button>
            </div>
            <hr />
            <p>已经注册? 点击 <a href="/User/Login" class="color-green">登录</a> 你的账号</p>
            </form>
        </div><!--/row-fluid-->
    </div><!--/container-->
</div><!--/body-->
<!--=== End Content Part ===-->

<script type="text/javascript">

    var validator = $("#userform").kendoValidator().data("kendoValidator");

    $("#save").on("click", function () {
        if (validator.validate()) {
            // If the form is valid, the Validator will return true
            //save();
        }
    });

</script>
