        <div class="span9">
            <form class="reg-page" id="publishform" method="post" action="/user/AddArt" />
            <h3>上传艺术品</h3>
            <div class="controls">
                <label>作品名称 <span class="color-red">*</span></label>
                <input class="span12" type="text" name="title" value="" placeholder="请录入作品名称 （*必填)" required validationmessage="请输入作品名称" />
                <label>作品简介 <span class="color-red">*</span></label>
                <textarea class="span12" rows="10" cols="30" name="zpms" placeholder="作品简介（*必填）" required validationmessage="请输入作品简介"></textarea>
                <label>作品类型</label>
                <select name="pinlei" class="span12">
                    <option value="">请选择作品类型</option>
                    <option value="yh">油画</option>
                    <option value="bx">丙烯</option>
                    <option value="gh">国画</option>
                    <option value="zhcl">综合材料</option>
                    <option value="sy">摄影</option>
                    <option value="ds">雕塑</option>
                    <option value="zz">装置</option>
                    <option value="sc">水彩</option>
                    <option value="sm">素描</option>
                    <option value="ch">插画</option>
                    <option value="sf">书法</option>
                    <option value="smht">数码绘图</option>
                    <option value="qt">其他</option>
                </select>
                <label>作品价格 <span class="color-red">*</span></label>
                <input class="span12" type="text" name="price" placeholder="请录入作品价格 （*必填） ￥/RMB" required validationmessage="请输入作品价格">
                <label>作品主图片 （<span class="color-red">*</span>必填, 选择一张图片小于2MB）</label>
                @(Html.Kendo().Upload().Name("file1"))
                <label>作品其他图片 （<span class="color-red">*</span>必填，选择一张图片小于2MB）</label>
                @(Html.Kendo().Upload().Name("file2"))
            </div>
            <div class="controls">
                <label></label>
            </div>
            <div class="controls form-inline">
                <label class="checkbox"><input type="checkbox" />&nbsp; 我同意 <a href="">ZeusPark相关条款</a></label>
                <button class="btn-u pull-right" type="submit" id="save">上   传</button>
            </div>
            <hr />
            <input class="file_name" style="display:none" name="file_name"></input>
            <input class="file_name_other" style="display:none" name="file_name_other"></input>
            </form>
